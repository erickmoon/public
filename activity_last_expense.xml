<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LastExpenseActivity"
    android:background="@color/app_backgrond"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/btnBack"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        android:padding="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="@color/app_green"/>
    <TextView
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_expense"
        android:fontFamily="@font/roboto_black"
        android:textStyle="normal"
        android:textColor="@color/purple_500"
        android:textSize="28sp"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:background="@color/purple_500"
        android:layout_marginBottom="30dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Other layout elements -->

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/applicants_details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/roboto_black"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginStart="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/first_name"
                            android:textSize="18sp"
                            android:textColor="@color/app_green"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/first_name"
                            android:textSize="18sp"
                            android:textColorHint="@color/icon_tint"
                            android:textColor="@color/purple_500"
                            android:backgroundTint="@color/icon_tint"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginStart="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/last_name"
                            android:textSize="18sp"
                            android:textColor="@color/app_green"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:textColorHint="@color/icon_tint"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:id="@+id/etLasttName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/first_name"
                            android:textSize="18sp"
                            android:textColor="@color/purple_500"
                            android:backgroundTint="@color/icon_tint"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/icon_tint"
                        android:text="@string/male"
                        android:layout_marginEnd="20dp"/>

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/icon_tint"
                        android:text="@string/female"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/id_number"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextIdNumber"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="@string/enter_id_number"
                    android:inputType="numberSigned"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_number"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextMobileNumber"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="@string/enter_mobile_number"
                    android:inputType="phone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/insurance_provider"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextInsuranceProvider"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="@string/enter_insurance_provider"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_expense_insurance_package"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/editTextLastExpensePackage"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="@string/enter_last_expense_package"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dependants_covered"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextDependantsCovered"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned"
                    android:hint="@string/enter_dependants_covered"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/purple_500"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/relationship_with_dependants"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_indicate_how_many_in_each"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Spouse -->
                    <TextView
                        android:textStyle="normal"
                        android:textColor="@color/app_green"
                        android:layout_marginStart="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/spouse"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"/>
                    <EditText
                        android:id="@+id/txtSpouseCount"
                        android:textColorHint="@color/icon_tint"
                        android:backgroundTint="@color/icon_tint"
                        android:textColor="@color/purple_500"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:hint="@string/number_of_spouse"
                        android:inputType="numberSigned"/>

                    <!-- Children -->
                    <TextView
                        android:textStyle="normal"
                        android:textColor="@color/app_green"
                        android:layout_marginStart="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/children"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"/>
                    <EditText
                        android:id="@+id/txtChildrenCount"
                        android:textColorHint="@color/icon_tint"
                        android:backgroundTint="@color/icon_tint"
                        android:textColor="@color/purple_500"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:hint="@string/number_of_children"
                        android:inputType="numberSigned"/>

                    <!-- Parents -->
                    <TextView
                        android:textStyle="normal"
                        android:textColor="@color/app_green"
                        android:layout_marginStart="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parents"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"/>
                    <EditText
                        android:id="@+id/txtParentsCount"
                        android:textColorHint="@color/icon_tint"
                        android:backgroundTint="@color/icon_tint"
                        android:textColor="@color/purple_500"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:hint="@string/number_of_parents"
                        android:inputType="numberSigned"/>

                    <!-- Siblings -->
                    <TextView
                        android:textStyle="normal"
                        android:textColor="@color/app_green"
                        android:layout_marginStart="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/grandparents"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"/>
                    <EditText
                        android:id="@+id/txtGrandparentsCount"
                        android:textColorHint="@color/icon_tint"
                        android:backgroundTint="@color/icon_tint"
                        android:textColor="@color/purple_500"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:hint="@string/number_of_grandparents"
                        android:inputType="numberSigned"/>

                    <!-- Other -->
                    <TextView
                        android:textStyle="normal"
                        android:textColor="@color/app_green"
                        android:layout_marginStart="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inlaws"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"/>
                    <EditText
                        android:id="@+id/txtInlawsCount"
                        android:textColorHint="@color/icon_tint"
                        android:backgroundTint="@color/icon_tint"
                        android:textColor="@color/purple_500"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:hint="@string/number_of_inlaws"
                        android:inputType="numberSigned"/>
                    <!-- Other -->
                    <TextView
                        android:textStyle="normal"
                        android:textColor="@color/app_green"
                        android:layout_marginStart="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/extended"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"/>
                    <EditText
                        android:id="@+id/txtExtendedCount"
                        android:textColorHint="@color/icon_tint"
                        android:backgroundTint="@color/icon_tint"
                        android:textColor="@color/purple_500"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:hint="@string/number_of_extended"
                        android:inputType="numberSigned"/>
                </LinearLayout>
            </LinearLayout>






            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/next_of_kin"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/editTextNextOfKin"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="@string/enter_next_of_kin"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/next_of_kin_mobile"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextNextOfKinMobile"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:hint="@string/enter_next_of_kin_mobile"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:textColor="@color/app_green"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/relationship_with_next_of_kin"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextRelationshipWithNextOfKin"
                    android:textColorHint="@color/icon_tint"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="@string/enter_relationship_with_next_of_kin"/>
            </LinearLayout>


            <!-- Amount to Send to Insurance Provider -->
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_to_send_to_insurance_provider"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_green"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etAmountToSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_amount"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:backgroundTint="@color/icon_tint"
                    android:textColor="@color/purple_500"
                    android:textColorHint="@color/icon_tint"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Are you a current member of this insurance company? -->
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_member_question"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_green"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/icon_tint" />

                    <RadioButton
                        android:id="@+id/rbNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/icon_tint" />
                </RadioGroup>
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:layout_marginBottom="50dp"
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="@string/proceed"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif-medium" />


            <!-- Other layout elements -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
